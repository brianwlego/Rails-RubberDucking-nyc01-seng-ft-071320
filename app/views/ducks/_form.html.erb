<h1>Duck Form</h1>

<% if flash[:my_errors] %>
  <% flash[:my_errors].each do |error|%>
    <%= error %><br>
  <%end%>
<%end%>


<%= form_for @duck do |f|%>

<%= f.label :name%>
<%= f.text_field :name%><br>

<%= f.label :description%>
<%= f.text_area :description%><br>

<% f.label "Student" %>
<%= f.collection_select :student_id, Student.all, :id, :name %>

<%= f.submit %>
<%end%>